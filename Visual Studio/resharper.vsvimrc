set vsvim_useeditordefaults
set vsvim_useeditorindent
let mapleader = ' '

set scrolloff=5
set nu rnu
set visualbell

set hlsearch
set incsearch
set ignorecase
set smartcase
noremap <c-n> :nohl<cr>
map <c-s> :w!<cr>

set cursorline
set backspace=indent,eol,start

set clipboard=unnamed
noremap Y y$
vnoremap Y $y
